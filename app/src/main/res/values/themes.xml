<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fitness_FEIP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/purple_500</item>
    </style>

    <style name="Theme.Fitness_FEIP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextNoGravity">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Text.Right">
        <item name="android:gravity">right</item>
    </style>

    <style name="Text.Left">
        <item name="android:gravity">left</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="Text.SemiBold">
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <style name="Text.Bold.Header">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.SemiBold.Header">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Bold.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Agreement">
        <item name="android:textSize">12sp</item>
    </style>
</resources>